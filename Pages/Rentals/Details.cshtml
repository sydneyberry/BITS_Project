@page
@model BITS_Project.Pages.Rentals.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Rental</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rental.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rental.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rental.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rental.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rental.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rental.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rental.DateMade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rental.DateMade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rental.DateFor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rental.DateFor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rental.Equipments)
        </dt>
        <dd class="col-sm-2">
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Rental.Equipments)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EquipmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                </tr>
            }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Rental.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
