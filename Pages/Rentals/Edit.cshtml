@page
@model BITS_Project.Pages.Rentals.EditModel

@{
    ViewData["Title"] = "Edit";
    if (Model.SignedIn == 1)
    {
        Layout = "_EmployeeLayout";
    }}

<h1>Edit</h1>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rental.ID" />
            <div class="form-group">
                <label asp-for="Rental.FirstName" class="control-label"></label>
                <input asp-for="Rental.FirstName" class="form-control" />
                <span asp-validation-for="Rental.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.LastName" class="control-label"></label>
                <input asp-for="Rental.LastName" class="form-control" />
                <span asp-validation-for="Rental.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.PhoneNumber" class="control-label"></label>
                <input asp-for="Rental.PhoneNumber" class="form-control" />
                <span asp-validation-for="Rental.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.DateMade" class="control-label"></label>
                <input asp-for="Rental.DateMade" class="form-control" />
                <span asp-validation-for="Rental.DateMade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.DateFor" class="control-label"></label>
                <input asp-for="Rental.DateFor" class="form-control" />
                <span asp-validation-for="Rental.DateFor" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Rental.EquipmentID" class="control-label"></label>
                <select asp-for="Rental.EquipmentID" class="form-control"
                        asp-items="@Model.EquipmentNameSL">
                    <option value="">-- Select Equipment --</option>
                </select>
                <span asp-validation-for="Rental.EquipmentID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

<div class="row text-danger">
    @Model.Msg
</div>
<div class="pb-5"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
