@page
@model BITS_Project.Pages.Equipments.IndexModel

@{
    ViewData["Title"] = "Equipment Index";
    if (Model.SignedIn == 1)
    {
        Layout = "_EmployeeLayout";
    }
}
<div class="container push">
    <h1>Equipment Inventory</h1>
    <!--<p>
        <a asp-page="Create">Create New</a>
    </p>-->
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Equipment[0].EquipmentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Equipment[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Equipment[0].Description)
                </th>
                @if (Model.SignedIn == 1)
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Equipment)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EquipmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @if (Model.SignedIn == 1)
                {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                }
            </tr>
            }
        </tbody>
    </table>
</div>
