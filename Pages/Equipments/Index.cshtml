@page
@model BITS_Project.Pages.Equipments.IndexModel

@{
    ViewData["Title"] = "Equipment Index";
    if (Model.SignedIn == 1)
    {
        Layout = "_EmployeeLayout";
    }
}
<div class="row mx-auto">
    <h1 class="mx-auto">Equipment</h1>
</div>
<hr />
@if (Model.SignedIn == 1)
{
    <div class="row mt-4 mx-auto align-content-center">
        <div class="col-md-6 mx-auto">
            <div class="no-gutters border mb-4" style="height: 100%">
                <div class="col p-4 d-flex flex-column position-static bg-light" style="height: 100%">
                    <h5 class="mx-auto"><a asp-page="/Equipments/Create">Add New Equipment</a></h5>
                    <p class="card-text mb-auto">
                        New equipment? Awesome! Let's get that added.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <br/>
}

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Equipment[0].EquipmentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Equipment[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Equipment[0].Description)
                </th>
                @if (Model.SignedIn == 1)
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Equipment)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EquipmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    @if (Model.SignedIn == 1)
                    {
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
