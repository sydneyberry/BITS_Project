@page
@model BITS_Project.Pages.LoginModel
@{
    ViewData["Title"] = "Rentals";
    if (Model.SignedIn == 1)
    {
        Layout = "_EmployeeLayout";
    }}

<h4 class="mx-auto">Employee Login</h4>
<div class="row mb-12 mx-auto">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Username">Username:</label>
            <input type="text" asp-for="@Model.Username" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password">Password:</label>
            <input type="password" asp-for="@Model.Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </form>
</div>
<div class="row text-danger">
    @Model.Msg
</div>
