@page
@model BITS_Project.Pages.Reservations.CreateModel

@{
    ViewData["Title"] = "Create";
    if (Model.SignedIn == 1)
    {
        Layout = "_EmployeeLayout";
    }}

<div class="container mt-5">
    <h1>New Reservation</h1>
    <hr />
    <div class="row mt-4">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Reservation.FirstName" class="control-label"></label>
                    <input asp-for="Reservation.FirstName" class="form-control" />
                    <span asp-validation-for="Reservation.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation.LastName" class="control-label"></label>
                    <input asp-for="Reservation.LastName" class="form-control" />
                    <span asp-validation-for="Reservation.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation.PhoneNumber" class="control-label"></label>
                    <input asp-for="Reservation.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Reservation.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation.SpaceID" class="control-label"></label>
                    <input asp-for="Reservation.SpaceID" class="form-control" />
                    <span asp-validation-for="Reservation.SpaceID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation.StartTime" class="control-label"></label>
                    <input asp-for="Reservation.StartTime" class="form-control" />
                    <span asp-validation-for="Reservation.StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation.EndTime" class="control-label"></label>
                    <input asp-for="Reservation.EndTime" class="form-control" />
                    <span asp-validation-for="Reservation.EndTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>